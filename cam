local EU0001 = {functions = {}}

local Vector2New, Cam, Mouse, client, find, Draw, Inset, players, RunService, UIS=
    Vector2.new,
    workspace.CurrentCamera,
    game.Players.LocalPlayer:GetMouse(),
    game.Players.LocalPlayer,
    table.find,
    Drawing.new,
    game:GetService("GuiService"):GetGuiInset().Y,
    game.Players, 
    game.RunService,
    game:GetService("UserInputService")


local mf, rnew = math.floor, Random.new

local Targetting
local lockedCamTo

local Circle = Draw("Circle")
Circle.Thickness = 1
Circle.Transparency = 0.7
Circle.Color = Color3.new(1,1,1)

EU0001.functions.update_FOVs = function ()
    if not (Circle) then
        return Circle
    end
    Circle.Radius =  getgenv().EU0001.SilentAim.FOVData.Radius * 3
    Circle.Visible = getgenv().EU0001.SilentAim.FOVData.Visibility
    Circle.Filled = getgenv().EU0001.SilentAim.FOVData.Filled
    Circle.Position = Vector2New(Mouse.X, Mouse.Y + (Inset))
    return Circle
end

EU0001.functions.onKeyPress = function(inputObject)
    if inputObject.KeyCode == Enum.KeyCode[getgenv().EU0001.SilentAim.Key:upper()] then
        getgenv().EU0001.SilentAim.Enabled = not getgenv().EU0001.SilentAim.Enabled
    end

    if inputObject.KeyCode == Enum.KeyCode[getgenv().EU0001.Tracing.Key:upper()] then
        getgenv().EU0001.Tracing.Enabled = not getgenv().EU0001.Tracing.Enabled
        if getgenv().EU0001.Tracing.Enabled then
            lockedCamTo = EU0001.functions.returnClosestPlayer(getgenv().EU0001.SilentAim.ChanceData.Chance)
        end
    end
end

UIS.InputBegan:Connect(EU0001.functions.onKeyPress)


EU0001.functions.wallCheck = function(direction, ignoreList)
    if not getgenv().EU0001.SilentAim.AimingData.CheckWalls then
        return true
    end

    local ray = Ray.new(Cam.CFrame.p, direction - Cam.CFrame.p)
    local part, _, _ = game:GetService("Workspace"):FindPartOnRayWithIgnoreList(ray, ignoreList)

    return not part
end

EU0001.functions.pointDistance = function(part)
    local OnScreen = Cam.WorldToScreenPoint(Cam, part.Position)
    if OnScreen then
        return (Vector2New(OnScreen.X, OnScreen.Y) - Vector2New(Mouse.X, Mouse.Y)).Magnitude
    end
end

EU0001.functions.returnClosestPart = function(Character)
    local data = {
        dist = math.huge,
        part = nil,
        filteredparts = {},
        classes = {"Part", "BasePart", "MeshPart"}
    }

    if not (Character and Character:IsA("Model")) then
        return data.part
    end
    local children = Character:GetChildren()
    for _, child in pairs(children) do
        if table.find(data.classes, child.ClassName) then
            table.insert(data.filteredparts, child)
            for _, part in pairs(data.filteredparts) do
                local dist = EU0001.functions.pointDistance(part)
                if Circle.Radius > dist and dist < data.dist then
                    data.part = part
                    data.dist = dist
                end
            end
        end
    end
    return data.part
end

EU0001.functions.returnClosestPlayer = function (amount)
    local data = {
        dist = 1/0,
        player = nil
    }

    amount = amount or nil

    for _, player in pairs(players:GetPlayers()) do
        if (player.Character and player ~= client) then
            local dist = EU0001.functions.pointDistance(player.Character.HumanoidRootPart)
            if Circle.Radius > dist and dist < data.dist and 
            EU0001.functions.wallCheck(player.Character.Head.Position,{client, player.Character}) then
                data.dist = dist
                data.player = player
            end
        end
    end
    local calc = mf(rnew().NextNumber(rnew(), 0, 1) * 100) / 100
    local use = getgenv().EU0001.SilentAim.ChanceData.UseChance
    if use and calc <= mf(amount) / 100 then
        return calc and data.player
    else
        return data.player
    end
end

EU0001.functions.setAimingType = function (player, type)
    local previousSilentAimPart = getgenv().EU0001.SilentAim.AimPart
    local previousTracingPart = getgenv().EU0001.Tracing.AimPart
    if type == "Closest Part" then
        getgenv().EU0001.SilentAim.AimPart = tostring(EU0001.functions.returnClosestPart(player.Character))
        getgenv().EU0001.Tracing.AimPart = tostring(EU0001.functions.returnClosestPart(player.Character))
    elseif type == "Closest Point" then
        EU0001.functions.returnClosestPoint()
    elseif type == "Default" then
        getgenv().EU0001.SilentAim.AimPart = previousSilentAimPart
        getgenv().EU0001.Tracing.AimPart = previousTracingPart
    else
        getgenv().EU0001.SilentAim.AimPart = previousSilentAimPart
        getgenv().EU0001.Tracing.AimPart = previousTracingPart
    end
end

EU0001.functions.aimingCheck = function (player)
    if getgenv().EU0001.SilentAim.AimingData.CheckKnocked == true and player and player.Character then
        if player.Character.BodyEffects["K.O"].Value then
            return true
        end
    end
    if getgenv().EU0001.SilentAim.AimingData.CheckGrabbed == true and player and player.Character then
        if player.Character:FindFirstChild("GRABBING_CONSTRAINT") then
            return true
        end
    end
    return false
end


local lastRender = 0
local interpolation = 0.01

RunService.RenderStepped:Connect(function(delta)
    local valueTypes = 1.375
    lastRender = lastRender + delta
    while lastRender > interpolation do
        lastRender = lastRender - interpolation
    end
    if getgenv().EU0001.Tracing.Enabled and lockedCamTo ~= nil and getgenv().EU0001.Tracing.TracingOptions.Strength == "Hard" then
        local Vel =  lockedCamTo.Character[getgenv().EU0001.Tracing.AimPart].Velocity / (getgenv().EU0001.Tracing.Prediction * valueTypes)
        local Main = CFrame.new(Cam.CFrame.p, lockedCamTo.Character[getgenv().EU0001.Tracing.AimPart].Position + (Vel))
        Cam.CFrame = Cam.CFrame:Lerp(Main ,getgenv().EU0001.Tracing.TracingOptions.Smoothness , Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
        EU0001.functions.setAimingType(lockedCamTo, getgenv().EU0001.Tracing.TracingOptions.AimingType)
    elseif getgenv().EU0001.Tracing.Enabled and lockedCamTo ~= nil and getgenv().EU0001.Tracing.TracingOptions.Strength == "Soft" then
        local Vel =  lockedCamTo.Character[getgenv().EU0001.Tracing.AimPart].Velocity / (getgenv().EU0001.Tracing.Prediction / valueTypes)
        local Main = CFrame.new(Cam.CFrame.p, lockedCamTo.Character[getgenv().EU0001.Tracing.AimPart].Position + (Vel))
        Cam.CFrame = Cam.CFrame:Lerp(Main ,getgenv().EU0001.Tracing.TracingOptions.Smoothness , Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
        EU0001.functions.setAimingType(lockedCamTo, getgenv().EU0001.Tracing.TracingOptions.AimingType)
    else

    end
end)

task.spawn(function ()
    while task.wait() do
        if Targetting then
            EU0001.functions.setAimingType(Targetting, getgenv().EU0001.SilentAim.AimingType)
        end
        EU0001.functions.update_FOVs()
    end
end)


local __index
__index = hookmetamethod(game,"__index", function(Obj, Property)
    if Obj:IsA("Mouse") and Property == "Hit" then
        Targetting = EU0001.functions.returnClosestPlayer(getgenv().EU0001.SilentAim.ChanceData.Chance)
        if Targetting ~= nil and getgenv().EU0001.SilentAim.Enabled and not EU0001.functions.aimingCheck(Targetting) then
            local currentvelocity = Targetting.Character[getgenv().EU0001.SilentAim.AimPart].Velocity
            local currentposition = Targetting.Character[getgenv().EU0001.SilentAim.AimPart].CFrame

            return currentposition + (currentvelocity * getgenv().EU0001.SilentAim.Prediction)
        end
    end
    return __index(Obj, Property)
end)
